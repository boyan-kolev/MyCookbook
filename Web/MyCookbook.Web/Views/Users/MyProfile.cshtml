@using MyCookbook.Web.ViewModels.Users.Profile
@model UsersMyProfileViewModel

@{
    this.ViewData["Title"] = "Моят профил";
}

<div class="text-center text-primary">
    <h2>@this.ViewData["Title"] <i class="fas fa-user"></i></h2>
</div>
<hr class="border" />

<div class="row container-fluid">
    <div class="col-md-3 border border-primary rounded mr-3">
        <img src="@Model.ProfilePhoto" width="185" class="rounded mt-3 mb-3" />
    </div>
    <div class="col-md-8" style="background-color:lightgray">
        <div class="mt-3">
            <p><strong>Име: </strong>@Model.FirstName</p>
            <p><strong>Фамилия: </strong>@Model.LastName</p>
            <p><strong>Имейл: </strong>@Model.Email</p>
            <p><strong>Потребителско име: </strong>@Model.UserName</p>
            <p><strong>Дата на раждане: </strong>@Model.Birthdate.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="row">
            <div class="col-md-7"></div>
            <div class="col-md-5">
                <a href="/Identity/Account/Manage" class="btn btn-primary"><i class="fas fa-edit"></i> Редактирай профила</a>
            </div>
        </div>
    </div>
</div>
<hr class="border border-primary" />
<div class="row">
    <div class="col-md-4 border border-primary">
        <h4><a asp-controller="Users" asp-action="MyRecipes">Моите рецепти(@Model.RecipesCount)</a></h4>
    </div>
    <div class="col-md-4 border border-primary">
        <h4><a asp-controller="Users" asp-action="Cooked"><i class="fas fa-check" style="color:limegreen"></i> Сготвени рецепти(@Model.CookedRecipesCount)</a></h4>
    </div>
    <div class="col-md-4 border border-primary">
        <h4><a asp-controller="Users" asp-action="Favorites"><i class="fas fa-heart" style="color:red"></i> Любими рецепти(@Model.FavoriteRecipesCount)</a></h4>
    </div>
</div>