@using MyCookbook.Web.ViewModels.Home
@model HomeHttpErrorViewModel
@{
    this.ViewData["Title"] = Model.StatusCode;
}

@if (Model.StatusCode == 404)
{
    <div class="text-center text-primary">
        <h2>Тази страница не беше намерена!</h2>
        <img src="https://res.cloudinary.com/mycookbook/image/upload/v1588100710/86418032b715698a4dfa6684b50c12af_w4ns3a.gif" width="450" />
    </div>
}
else
{
    <div class="text-center text-primary">
        <h2>Възникна грешка!</h2>
        <img src="https://res.cloudinary.com/mycookbook/image/upload/v1588101726/76289acbe6c5a83ccf648702b7e8d3b9_yzu0c2.gif" width="450" />
    </div>
}