@using MyCookbook.Web.ViewModels.Cuisines.ByName
@using MyCookbook.Common
@model CuisineByNameViewModel

@{
    this.ViewData["Title"] = Model.Name;
}

<div class="row mb-4">
    <div class="col-md-8">
        <div class="media">
            <img height="45" width="70" class="align-self-center mr-3" src="@Model.ImageUrl" alt="знаме">
            <div class="media-body">
                <h4 class="font-weight-bold">@Model.Name</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <a asp-controller="Cuisines" asp-action="All"><i class="fas fa-hand-point-right fa-2x"></i>&nbsp; виж всички Национални кухни</a>
    </div>
</div>

<hr class="border" />
<div class="row row-cols-1 row-cols-md-3">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="col mb-4">
            <div class="card border-secondary">
                <div class="card-title">
                    <h5 class="card-title">@recipe.Title</h5>
                </div>
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" class="alert-info">
                    @if (recipe.TitlePhotoUrl == null)
                    {
                        <img src="@GlobalConstants.DefaultRecipeImageUrl" class="card-img-top" height="200" alt="Снимка на рецептата">
                    }
                    else
                    {
                        <img src="@recipe.TitlePhotoUrl" class="card-img-top" height="200" alt="Снимка на рецептата">
                    }
                </a>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <i class="far fa-calendar-alt" style="color:black">@recipe.CreatedOn.ToString("MM-dd-yy")</i>
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-star" style="color:gold"></i>
                            <span class="text-dark">@recipe.Rating</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>